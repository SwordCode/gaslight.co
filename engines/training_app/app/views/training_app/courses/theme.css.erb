.header{
  background-color: <%= course.color_primary %>;
}

.progress-bar__current-progress{
  background-color: <%= course.color_secondary %>;
}

.button--primary{
  background-color: <%= course.color_primary %>;
  border-color: <%= course.color_secondary %>;
}

.button--primary:hover{
  background-color: <%= course.color_secondary %>;
}

.nav-button:hover{
  border-color: <%= course.color_primary %>;
}

button:hover .nav-button__icon {
  color: <%= course.color_primary %>;
}

.nav-button:hover .nav-button__text{
  color: <%= course.color_primary %>;
}

.mejs-container .mejs-controls{
  background-color: <%= course.color_primary %>;
}

.subnav__item:hover::before{
  border-color: transparent transparent transparent <%= course.color_primary %>;
}

.subnav__item:hover::after{
  border-color: transparent transparent transparent transparent !important;
}

.subnav__item a:hover{
  color: <%= course.color_primary %>;
}