<%= semantic_form_for [:admin_blog_app, @blog_app_post], as: :blog_app_post do |f| %>
  <%= f.inputs do %>
    <%= f.input :author, as: :select, collection: BlogApp::Author.all %>
    <%= f.input :title %>
    <%= f.input :body, as: :hidden %>
    <li class="text input required">
      <label class="label">Body<abbr class="required">*</abbr></label>
        <div id="editor"></div>
      </label>
    </li>
    <%= f.input :description, label: 'Description (TL;DR)', hint: 'A paragraph, maybe. This shows up when links are shared and on search engines.' %>
    <%= f.input :audio_url, label: 'Audio File URL', hint: 'Only useful for Podcasts.' %>
    <%= f.input :slug, hint: 'This is automatically created based on your title, but you can override it here.' %>
    <input type="hidden" name="tag_list_string" class="tag-list-as-string" value="<%= @blog_app_post.tag_list %>"/>
    <%= f.input :tag_list, as: :select, input_html: { class: "chzn-select", multiple: "true" }, collection: BlogApp::Post.tags  %>
    <%= f.input :published_at, as: :datetime_picker, hint: 'You can set this to a future date, too! Anything prior to now is "published".' %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit %>
  <% end %>
<% end %>
