<ul class="nav nav-tabs">
  <li class="active"><a href="#edit" data-toggle="tab">Edit</a></li>
  <li><a href="#preview" data-toggle="tab">Preview</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="edit">
    <form role="form">
      <div class="form-group">
        {{input class="form-control input-lg" placeholder="Title" value=title}}
      </div>
      <div class="form-group">
        {{textarea class="form-control" placeholder="Body" rows="20" value=body}}
      </div>
      <div class="form-group">
        {{textarea class="form-control" placeholder="Snippet" rows="3" value=description}}
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-3">
            {{input class="form-control input-sm" placeholder="Author" value=author}}
          </div>
          <div class="col-xs-5">
            {{input class="form-control input-sm" placeholder="Slug" value=slug}}
          </div>
          <div class="col-xs-4">
            {{input class="form-control input-sm" placeholder="Audio URL" value=audioURL}}
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-4">
            {{input class="form-control input-sm" placeholder="Published At" value=publishedAt}}
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="checkbox-inline">
          {{input type="checkbox" name=published checked=published}} Published?
        </label>
      </div>

      <button class="btn btn-primary" {{action 'savePost' this}}>Save</button>
    </form>
  </div>

  <div class="tab-pane" id="preview">
    {{render 'post' this}}
  </div>
</div>

