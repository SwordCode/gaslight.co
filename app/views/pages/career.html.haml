      .row
        .large-6.columns.large-centered
          %form#mc-embedded-subscribe-form.validate{:action => "http://gaslight.us4.list-manage.com/subscribe/post?u=8c64d42f5af77dfcaa8d23c71&amp;id=5fb0f9234f", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
