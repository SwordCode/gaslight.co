- content_for(:title) { "Gaslight: Recent Work" }

#main.content.with-photo
  %section.section--contrast.header--work
    .row
      .large-12.columns.large-centered
        %h1.title--light A Great App Takes Your Business To New Places
    .row
      .large-12.columns.large-centered
        %h3.subheading--light See how we’ve given our clients a boost with custom software.
        .underline--blue.underline--heading

  %section.section--contrast
    .row.large-centered
      %h2.heading Case Studies
      .underline--blue
    .row
      .large-12.columns
        %a.bounce-house{href: page_path('work/enjoy-the-arts') }
          %img.bounce-house__image{src: image_url("casestudy/bounce-house--eta.jpg")}
          .bounce-house__content.bounce-house__content--featured
            %h3.subheading--light View Featured Case Study
            %h2.heading--case-study Reinventing Arts Engagement for the Tech Generation
            %h3.subheading--light Enjoy the Arts

    .row
      .large-6.columns
        %a.bounce-house{ href: page_path('work/ipc') }
          %img.bounce-house__image{src: image_url("casestudy/bounce-house--ipc.jpg")}
          .bounce-house__content
            %h3.subheading--light View Case Study
            %h2.heading--case-study Supercharging the SUBWAY® Card Program
            %h3.subheading--light Independent Purchasing Cooperative

      .large-6.columns
        %a.bounce-house{ href: page_path('work/lumbee') }
          %img.bounce-house__image{src: image_url("casestudy/bounce-house--lumbee.jpg")}
          .bounce-house__content
            %h3.subheading--light View Case Study
            %h2.heading--case-study Overhauling Legacy Software
            %h3.subheading--light Lumbee Enterprises
