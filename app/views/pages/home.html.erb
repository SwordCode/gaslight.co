<html>
  <head>
    <meta charset: "utf-8"></meta>
    <meta name: "viewport", content: "width=device-width, initial-scale=1.0"></meta>
    <title>Home</title>
    <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Karla:400,700|Capriola|Nunito:400,300" %>
    <%= stylesheet_link_tag    "home" %>
    <%= javascript_include_tag "home" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper" class="row">
      <ul id="bars">
        <li class="columns four first"></li>
        <li class="columns four second"></li>
        <li class="columns four third"></li>
      </ul>

      <ul id="taglines">
        <li class="active">
          <h1>Funk</h1>
          <h2>Radio</h2>
        </li>
        <li>
          <h1>New</h1>
          <h2>Text</h2>
        </li>
        <li>
          <h1>Awesome</h1>
          <h2>Words</h2>
        </li>
        <li>
          <h1>Catchy</h1>
          <h2>Opener</h2>
        </li>
        <li>
          <h1>Cool</h1>
          <h2>People</h2>
        </li>
      </ul>

      <section id="about">
        <h3>We Are So Much More Than Software</h3>
        <div class="inner">
          <div class="logo">
            <img src="/assets/home/logo.png">
          </div>
          <div class="sweetSkills">
            <p>
              We are a Cincinnati-based shop, partnering with you to turn your
              imagination into reality. We build solutions and create digital
              experiences.
            </p>
            <ul class="icons">
              <li>
                <i class="rails"></i>
                <label>Ruby on Rails</label>
              </li>
              <li>
                <i class="backbone"></i>
                <label>Backbone</label>
              </li>
              <li>
                <i class="ios"></i>
                <label>iOS</label>
              </li>
              <li>
                <i class="design"></i>
                <label>Design</label>
              </li>
              <li>
                <i class="ux"></i>
                <label>User Experience</label>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <section id="contact">
        <h3>Want to talk?</h3>
        <div class="inner">
          <%= form_tag('/contact') do %>
            <%= text_field_tag 'Name', nil, placeholder: 'Name' %>
            <%= text_field_tag 'Email', nil, placeholder: 'Email' %>
            <%= text_area_tag 'Comments', nil, placeholder: 'Where do you want to go today?' %>
            <%= submit_tag 'Submit', :class => 'tiny secondary button' %>
          <% end %>
        </div>
      </section>
