%html{ :lang => "en" }
  <![endif]-->

  %head
    <!--[if lt IE 9]>
    = javascript_include_tag "html5shiv"
    <![endif]-->
    %title= content_for?(:title) ? content_for(:title) : "Gaslight: Ruby on Rails, iOS and JavaScript development"
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    = auto_discovery_link_tag(:rss, posts_url(format: :rss))
    = favicon_link_tag "/assets/32x32icon.png"
    = stylesheet_link_tag "application"
    = yield :head
    = csrf_meta_tags
  %body{class: "#{controller.controller_name} #{controller.action_name}"}
    = yield
    = javascript_include_tag "application"
    = yield :javascript
    = render partial: 'application/analytics'
