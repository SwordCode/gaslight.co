- content_for(:title) { post.title }
= render partial: 'application/nav'
#main.container.row
  .columns.eight.post
    .header
      %h1
        = post.title
      by #{link_to(post.author, posts_path(author: post.author))}
      %time{pubdate: true}= l(post.published_on, format: :nice)
      %div
        = render partial: 'tweet'
        = render partial: 'share'
    .body
      = raw(post.html)
    .comments#disqus_thread
  .columns.three.prepend-1.sidebar
    %h4 Tags
    = tag_list(post.tags)
    %h3 More
    - if post.previous
      Previous: #{link_to(post.previous.title, post.previous)}
    - if post.next
      Next: #{link_to(post.next.title, post.next)}
= render partial: 'application/footer'

- content_for(:javascript) do
  :javascript
    var disqus_shortname = 'gaslightsoftwareblog';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  %noscript
    Please enable JavaScript to view the
    %a{href: "http://disqus.com/?ref_noscript"} comments powered by Disqus
  %a{href: "http://disqus.com", class: "dsq-brlink"}
    comments powered by
    %span{class: "logo-disqus"} Disqus

